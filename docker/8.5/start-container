#!/usr/bin/env bash

if [ "$SUPERVISOR_PHP_USER" != "root" ] && [ "$SUPERVISOR_PHP_USER" != "sail" ]; then
    echo "You should set SUPERVISOR_PHP_USER to either 'sail' or 'root'."
    exit 1
fi

if [ ! -z "$WWWUSER" ]; then
    usermod -u $WWWUSER sail
fi

if [ ! -d /.composer ]; then
    mkdir /.composer
fi

chmod -R ugo+rw /.composer

run_migrations() {
    local retries=5
    local wait=5
    local migrate_user="${WWWUSER:-sail}"

    for attempt in $(seq 1 $retries); do
        if [ "$SUPERVISOR_PHP_USER" = "root" ]; then
            php artisan migrate --force --no-interaction && return 0
        else
            gosu "$migrate_user" php artisan migrate --force --no-interaction && return 0
        fi

        echo "Migrations failed (attempt ${attempt}/${retries}). Retrying in ${wait}s..."
        sleep $wait
    done

    echo "Migrations failed after ${retries} attempts."
    exit 1
}

if [ $# -gt 0 ]; then
    if [ "$SUPERVISOR_PHP_USER" = "root" ]; then
        exec "$@"
    else
        exec gosu $WWWUSER "$@"
    fi
else
    run_migrations
    exec /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf
fi
